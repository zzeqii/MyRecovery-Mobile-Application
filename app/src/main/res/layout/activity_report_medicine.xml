<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comp5216.myrecovery.ReportMedicine">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bot_nav"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        app:itemIconTint="@color/bottom_nav_icon_color_selector"
        app:itemTextColor="@color/bottom_nav_icon_color_selector"
        app:menu="@menu/navigation"
        tools:layout_editor_absoluteY="33dp"
        tools:layout_editor_absoluteX="8dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/medical"
        android:scaleType = "centerCrop"
        android:alpha=".5"
        android:layout_below="@+id/textViewMed"
        android:layout_centerHorizontal="true" />

    <CheckBox android:id="@+id/medicineA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Panadol"
        android:layout_below="@+id/textViewMed"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:alpha=".65"
        android:layout_centerHorizontal="true"/>
    <CheckBox android:id="@+id/medicineB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/medicineA"
        android:text="Ibuprofen"
        android:textSize="25sp"
        android:textStyle="bold"
        android:alpha=".65"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        />
    <CheckBox android:id="@+id/medicineC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/medicineB"
        android:layout_marginTop="40dp"
        android:alpha=".65"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Augmentin"
        />
    <CheckBox android:id="@+id/medicineD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".65"
        android:layout_below="@id/medicineC"
        android:layout_marginTop="40dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Milton"
        />

    <ImageView
        android:id="@+id/medSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="120dp"
        android:maxHeight="120dp"
        android:scaleType="fitCenter"
        android:src="@drawable/sub"
        android:layout_below="@id/medicineD"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:onClick="onSubmit"/>

    <TextView
        android:id="@+id/textViewMed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which of the following medicines have you taken?"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/Gray"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
